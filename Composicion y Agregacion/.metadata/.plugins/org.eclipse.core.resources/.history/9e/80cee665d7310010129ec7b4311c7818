		Scanner leer = new Scanner(System.in);

        System.out.print("DIRECCION DE LA CASA: ");
        String direccion = leer.nextLine();

        System.out.print("Â¿CAPACIDAD MAXIMA DE HABITACIONES?");
        int capacidad = leer.nextInt();
